{
  "manifest_version": 3,
  "name": "YouTube Clickbait Detector",
  "version": "0.1.0",
  "description": "An extension to detect and flag clickbait videos on YouTube.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}